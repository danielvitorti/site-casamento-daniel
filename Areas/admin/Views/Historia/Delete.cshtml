@model casamento.Areas.admin.Models.Historia

@{
    ViewBag.Title = "Área Administrativa - Excluir História";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>Excluir História</h2>

<h3>Tem certeza de que deseja realizar a exclusão?</h3>
<div>
    <h4>Historia</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.titulo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.titulo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.descricaoHistoria)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descricaoHistoria)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.imagemHistoria)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.imagemHistoria)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ordem)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ordem)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar para a listagem de histórias", "Index")
        </div>
    }
</div>
