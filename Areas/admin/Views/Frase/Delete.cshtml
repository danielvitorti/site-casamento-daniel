@model casamento.Areas.admin.Models.Frase

@{
    ViewBag.Title = "Área Administrativa - Excluir frase";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>Excluir frase</h2>

<h3>Tem certeza que deseja realizar a exclusão?</h3>
<div>
    <h4>Frase</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.frase)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.frase)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar para a listagem de frases", "Index")
        </div>
    }
</div>
