@model casamento.Areas.admin.Models.Galeria

@{
    ViewBag.Title = "Área Administrativa - Cadastrar nova galeria de imagens";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>Cadastrar nova galaria de imagens</h2>

@using (Html.BeginForm("Create", "galerias",FormMethod.Post,new { enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Galeria de imagens</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nomeGaleria, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomeGaleria, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nomeGaleria, "", new { @class = "text-danger" })                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.destaque, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                
                <select name="destaque" class="form-control">
                    <option value="0">Não</option>
                    <option value="1">Sim</option>
                </select>
                @Html.ValidationMessageFor(model => model.destaque, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listagem", "Index")
</div>
