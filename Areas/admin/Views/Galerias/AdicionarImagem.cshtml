@model casamento.Areas.admin.Models.Galeria

@{
    ViewBag.Title = "Área Administrativa - Adicionar imagem para galeria";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>Adicionar imagem para a galeria @Model.nomeGaleria</h2>


@using (Html.BeginForm("AdicionarImagem", "galerias", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <input type="hidden" name="idGaleria" id="idGaleria" value="@Model.id" />

    <div class="form-group">
        <label class="control-label col-md-2"> Breve descrição</label>
        <div class="col-md-10">
            <input type="text" name="nome" id="nome" class="form-control" />
        </div>
    </div>



    <div class="form-group">
        <label class="control-label col-md-2"> Imagem</label>
        <div class="col-md-10">
           <input type="file" name="imagem" id="imagem" class="form-control" />
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cadastrar imagem" class="btn btn-default" />
        </div>
    </div>
    </div>


} 

