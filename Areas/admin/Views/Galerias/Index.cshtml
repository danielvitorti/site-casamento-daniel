@model IEnumerable<casamento.Areas.admin.Models.Galeria>

@{
    ViewBag.Title = "Área Administrativa - Galeria de imagens cadastradas";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>Galerias de imagens</h2>

<p>
    @Html.ActionLink("Cadastrar nova galeria de imagens", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nome
        </th>
        <th>
            Destaque
        </th>
        <th>
            Data de cadastro
        </th>
        <th></th>
    </tr>

@foreach (var item in ViewBag.galeriasLista) {
    <tr>
        <td>
            
            @item.nomeGaleria
        </td>
        <td>
            @item.destaque
        </td>
        <td>
            @item.dataCadastro
        </td>
        <td>
            @Html.ActionLink("Adicionar imagens", "AdicionarImagem", new { id = item.id }) |
            @Html.ActionLink("Alterar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
