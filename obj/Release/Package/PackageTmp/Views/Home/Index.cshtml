    <section class="box-content box-6">
        <div class="container">
            <div class="row heading">
                <div class="col-lg-12">
                    <h2>NOSSA HISTÓRIA</h2>
                    <hr class="line">
                    <div class="intro">Confira nossa breve história</div>
                </div>
            </div>
            <div class="row">
                

                    @foreach (var item in ViewBag.historiaDestaque)
                    {
                        <div class="col-md-4">
                            <div class="box-item">
                                <img src="~/images/@item.imagemHistoria" class="img-responsive" />
                                <div class="content">
                                    <h3>@item.titulo</h3>
                                    <p>@item.descricaoHistoria</p>
                                    <!--<span>MAY 21, 2014 BY VAFPRESS</span> -->
                                </div>
                            </div>
                        </div>

                    }
                        
        </div>
    </section>

    <!-- ////////////Content Box 07 -->


        @foreach (var item in ViewBag.endereco)
        {

            <section class="box-content box-7">
                <div class="clearfix">
                    <div class="heading">
                        <h2>@item.tituloEndereco</h2>
                        <hr class="line">
                        <div class="intro">@item.descricaoEndereco</div>
                    </div>
                    <div class="box-item">
                        @Html.Raw(@item.linkLocalizacao)
                        
                    </div>
                </div>
            </section>

        }
    
</div>