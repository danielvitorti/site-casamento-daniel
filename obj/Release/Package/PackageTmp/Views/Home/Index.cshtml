
@{
    ViewBag.Title = "Início";
}

<!-- /////////////////////////////////////////Content -->
<div id="page-content">

    <!-- ////////////Content Box 01 -->
    <section class="box-content box-1">
        <div class="container">
            <div class="row">

                @foreach (var item in ViewBag.noivosDestaque)
                {
                    <div class="col-sm-6 ">
                        <div class="box-item">
                            <a href="#"><img src="~/images/@item.imagem" title="icon-name" class="img-circle"></a>
                            <h3>@item.nome</h3>
                            <p>

                                @item.descricao
                            </p>
                            <a class="btn btn-sm" href="#">Leia Mais</a>
                        </div>
                    </div>
                }
             
            </div>
        </div>
    </section>

    <!-- ////////////Content Box 02 -->
    <section class="box-content box-2 box-style-1">
        <div class="container">
            <div class="row heading">
                <div class="col-lg-12">
                    <h2>HAVE BEEN MARRIED SINCE</h2>
                    <hr class="line">
                    <div class="intro">Lorem ipsum dolor sit amet</div>
                </div>
            </div>
            <div class="row">
                <div class="box-item">
                    <div class="centered text-center" id="myCounter"></div>
                </div>
            </div>
        </div>
    </section>

    <!-- ////////////Content Box 03 -->
    <section class="box-content box-3">
        <div class="container">
            <div class="row heading">
                <div class="col-lg-12">
                    <h2>BREVE GALERIA DE FOTOS</h2>
                    <hr class="line">
                    <div class="intro">Confira as fotos</div>
                </div>
            </div>
            <div class="row box-item">
                <ul id="da-thumbs" class="da-thumbs">

                    @foreach (var item in ViewBag.imagensGaleriaDestaque)
                    {
                        <li>
                            <a href="#">
                                <img src="~/images/@item.imagemGaleria" />
                                <div><span>@item.nomeImagemGaleria</span></div>
                            </a>
                        </li>

                    }

                </ul>
            </div>
        </div>
    </section>

    <!-- ////////////Content Box 04 -->
@foreach (var item in ViewBag.frase)
{
    <section class="box-content box-4 box-style-2">
        <div class="container">
            <div class="row">
                <div class="box-item">
                    <blockquote><p>@item.frase</p></blockquote>
                </div>
            </div>
        </div>
    </section>

}
